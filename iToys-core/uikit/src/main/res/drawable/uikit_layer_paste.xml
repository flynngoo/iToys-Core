<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- SHADOW LAYER -->
    <item
        android:left="0.5dp"
        android:top="0.5dp">
        <shape>
            <solid android:color="@color/uikit_colorful_percent30_black" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!-- CONTENT LAYER -->
    <item
        android:bottom="0.5dp"
        android:right="0.5dp">
        <shape>
            <solid android:color="@color/uikit_colorful_FAFAFA" />
            <corners android:radius="2dp" />
            <stroke
                android:width="0.5dp"
                android:color="@color/uikit_colorful_F0F0F0" />
        </shape>
    </item>
</layer-list>