<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/upload_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/uikit_colorful_white">

        <com.itoys.android.uikit.components.upload.UploadItemView
            android:id="@+id/upload_item"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:itemMark="mark1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.itoys.android.uikit.components.upload.UploadListView
            android:id="@+id/upload_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/upload_item"
            app:uploadListMark="mark2"
            app:uploadListMaximum="999"
            app:uploadListRequired="false"
            app:uploadListTitle="测试上传" />

        <com.itoys.android.uikit.components.upload.UploadWithHeaderView
            android:id="@+id/upload1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingHorizontal="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/upload_list"
            app:uploadItemWidth="150dp"
            app:uploadMark="mark3"
            app:uploadTitle="测试Header" />

        <com.itoys.android.uikit.components.upload.UploadWithHeaderView
            android:id="@+id/vin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/uikit_colorful_white"
            android:paddingTop="10dp"
            android:paddingStart="16dp"
            android:paddingEnd="8dp"
            app:layout_constraintEnd_toStartOf="@id/front_left"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/upload1"
            app:uploadMark="url1"
            app:uploadTitle="测试Header1" />

        <com.itoys.android.uikit.components.upload.UploadWithHeaderView
            android:id="@+id/front_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/uikit_colorful_white"
            android:paddingTop="10dp"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@id/vin"
            app:layout_constraintTop_toTopOf="@id/vin"
            app:uploadMark="url3"
            app:uploadTitle="测试Header2" />

        <com.itoys.android.uikit.components.upload.UploadGroupView
            android:id="@+id/upload_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:uploadGroupRequiredMark="true"
            app:layout_constraintTop_toBottomOf="@id/vin" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/upload"
            style="@style/IToysAndroid.Button.Stroke"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginHorizontal="43dp"
            android:layout_marginTop="12dp"
            android:text="Upload"
            app:layout_constraintTop_toBottomOf="@id/upload_group" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>