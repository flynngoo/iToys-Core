<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.IToysAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="appPrimaryColor">@color/uikit_colorful_42B2F9</item>
        <item name="appPrimaryVariantColor">@color/uikit_colorful_98CBF9</item>
        <item name="colorPrimary">?attr/appPrimaryColor</item>
        <item name="colorPrimaryVariant">?attr/appPrimaryVariantColor</item>
        <item name="colorOnPrimary">@color/uikit_colorful_white</item>
        <!-- Secondary brand color. -->
        <item name="appSecondaryColor">@color/uikit_colorful_42B2F9</item>
        <item name="appSecondaryVariantColor">@color/uikit_colorful_98CBF9</item>
        <item name="colorSecondary">?attr/appSecondaryColor</item>
        <item name="colorSecondaryVariant">?attr/appSecondaryVariantColor</item>
        <item name="colorOnSecondary">@color/uikit_colorful_black</item>
        <!-- Customize your theme here. -->
        <item name="textAppearanceSubtitle1">@style/IToysAndroid.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/IToysAndroid.Subtitle2</item>
        <item name="textAppearanceBody1">@style/IToysAndroid.Body1</item>
        <item name="textAppearanceBody2">@style/IToysAndroid.Body2</item>
        <item name="textAppearanceCaption">@style/IToysAndroid.Caption</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="appWindowBackground">@color/uikit_colorful_F7F8FA</item>
        <item name="android:windowBackground">?attr/appWindowBackground</item>
        <item name="appPrimaryTextColor">@color/uikit_colorful_1D2129</item>
        <item name="appSecondaryTextColor">@color/uikit_colorful_1D2129</item>
        <item name="appHintTextColor">@color/uikit_colorful_D4D8DB</item>
        <item name="appPrimaryButtonBackground">@drawable/uikit_primary_button_background</item>
        <!-- 移除recyclerview & scrollview 顶部和底部波纹 -->
        <item name="android:overScrollHeader">@color/uikit_colorful_transparent</item>
        <item name="android:overScrollFooter">@color/uikit_colorful_transparent</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="Theme.IToysAndroid.Starting" parent="Theme.IToysAndroid">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <!--<item name="android:windowDisablePreview">true</item>-->
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowExitTransition">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowEnterTransition">@null</item>
        <!--适配Android P刘海屏-->
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">shortEdges</item>
        <item name="android:navigationBarColor">@color/uikit_colorful_transparent</item>
    </style>

    <style name="IToysAndroid" parent="Theme.IToysAndroid">

    </style>

    <style name="IToysAndroid.TitleBar" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="barStyle">ripple</item>
        <!-- 标题栏背景 -->
        <item name="android:background">@color/uikit_colorful_white</item>
        <item name="titleColor">@color/uikit_colorful_333333</item>
        <item name="titleSize">18sp</item>
        <item name="leftIcon">@drawable/uikit_ic_back_black</item>
        <item name="lineVisible">false</item>
    </style>

    <style name="IToysAndroid.TitleBar.White" parent="IToysAndroid.TitleBar">
        <item name="android:background">@color/uikit_colorful_transparent</item>
        <item name="titleColor">@color/uikit_colorful_white</item>
        <item name="leftIcon">@drawable/uikit_ic_back_white</item>
    </style>

    <!-- Title1 -->
    <style name="IToysAndroid.Title1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/appPrimaryTextColor</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Subtitle1 16sp -->
    <style name="IToysAndroid.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/uikit_colorful_2E3234</item>
    </style>

    <!-- Subtitle1 14sp -->
    <style name="IToysAndroid.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?attr/appPrimaryTextColor</item>
    </style>

    <!-- Body1 16sp -->
    <style name="IToysAndroid.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/appPrimaryTextColor</item>
    </style>

    <style name="IToysAndroid.Body1.Medium" parent="IToysAndroid.Body1">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="IToysAndroid.Body1.Ark" parent="IToysAndroid.Body1">
        <item name="android:fontFamily">@font/ark_zh</item>
        <item name="fontFamily">@font/ark_zh</item>
    </style>

    <!-- Body2 14sp -->
    <style name="IToysAndroid.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/appPrimaryTextColor</item>
    </style>

    <style name="IToysAndroid.Body2.Medium" parent="IToysAndroid.Body2">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="IToysAndroid.Body2.Ark" parent="IToysAndroid.Body2">
        <item name="android:fontFamily">@font/ark_zh</item>
        <item name="fontFamily">@font/ark_zh</item>
    </style>

    <!-- Caption -->
    <style name="IToysAndroid.Caption" parent="TextAppearance.MaterialComponents.Caption" />

    <!-- View -->
    <style name="IToysAndroid.View" parent="IToysAndroid">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="IToysAndroid.ViewMatch" parent="IToysAndroid">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- Button -->
    <style name="IToysAndroid.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/uikit_colorful_white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="IToysAndroid.Button.Background" parent="IToysAndroid.Button">
        <item name="android:background">?attr/appPrimaryButtonBackground</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="IToysAndroid.Button.BackgroundTint" parent="IToysAndroid.Button">
        <item name="backgroundTint">?attr/appPrimaryColor</item>
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="IToysAndroid.Button.Stroke" parent="IToysAndroid.Button">
        <item name="backgroundTint">@color/uikit_colorful_transparent</item>
        <item name="cornerRadius">100dp</item>
        <item name="strokeColor">?attr/appPrimaryColor</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">?attr/appPrimaryColor</item>
    </style>

    <!-- Edit -->
    <style name="IToysAndroid.Input" parent="IToysAndroid.Body2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">?attr/appPrimaryTextColor</item>
        <item name="android:textColorHint">?attr/appHintTextColor</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:background">@null</item>
    </style>

    <!-- Dialog -->
    <style name="IToysAndroid.Dialog" parent="@style/Theme.MaterialComponents.Dialog">
        <!-- 无边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 浮在 Activity 之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/uikit_colorful_transparent</item>
        <!-- 去除黑色边框的关键设置项 遮盖层 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:background">@color/uikit_colorful_transparent</item>
        <!-- Base.Theme.AppCompat.Light.Dialog.Alert 特有的属性，用于指定默认宽度，这里需要禁用 -->
        <item name="android:windowMinWidthMajor">0dp</item>
        <item name="android:windowMinWidthMinor">0dp</item>
        <!-- 解决 ActionBar 占位导致 Dialog 无法全屏显示的问题 -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- ActionMode 覆盖 Actionbar，不顶下来 -->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 平移动 从底部向顶部平移 -->
    <style name="IToysAndroid.Dialog.Animation.Translate1" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_from_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_from_bottom_out</item>
    </style>

    <!-- 平移 从顶部向底部平移 -->
    <style name="IToysAndroid.Dialog.Animation.Translate2" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/anim_from_top_in</item>
        <item name="android:windowExitAnimation">@anim/anim_from_top_out</item>
    </style>

    <!-- 渐变 淡入淡出 -->
    <style name="IToysAndroid.Dialog.Animation.Fade" parent="android:Animation.Dialog" />

    <!-- Radio -->
    <style name="IToysAndroid.Radio" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/uikit_itoys_radio_buttons</item>
        <item name="buttonTint">@color/uikit_primary_radio_tint_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/appPrimaryTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingStart">8dp</item>
    </style>

    <style name="IToysAndroid.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:thumb">@drawable/uikit_switch_thumb_selector</item>
        <item name="track">@drawable/uikit_switch_track</item>
        <!-- <item name="trackTint">@drawable/uikit_switch_track_color_selector</item> -->
        <item name="materialThemeOverlay">@style/IToysAndroid.Switch.ThemeOverlay</item>
    </style>

    <style name="IToysAndroid.Switch.ThemeOverlay">
        <item name="colorOnSurface">@color/uikit_colorful_A6A6A6</item>
        <item name="colorSecondary">?attr/appPrimaryColor</item>
    </style>
</resources>